{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\ProgramData\\chocolatey\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-municode",
                "-mwindows",
                "${file}", 
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lole32",
                "-luuid",
                "-lshell32",
                "-lurlmon",
                "-lwininet",
                "-lgdi32",
                "-luser32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "MinGW build task"
        }
    ]
}